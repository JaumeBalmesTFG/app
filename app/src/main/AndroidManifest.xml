<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tfg.k_lendar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Klendar">
        <activity
            android:name=".views.truancy.EditTruancyActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".views.task.EditTaskActivity"
            android:exported="false" />
        <activity
            android:name=".views.shared.TaskTruancyActivity"
            android:exported="true"
            android:label="@string/title_activity_task_truancy"
            android:theme="@style/Theme.Klendar.NoActionBar">

        </activity>
        <activity
            android:name=".views.navigation.NavigationActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            android:exported="true"
            android:label="@string/title_activity_navigation" >
        </activity>
        <activity
            android:name=".views.auth.AuthActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>